<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/weather_info_layout"
        android:layout_width="297dp"
        android:layout_height="187dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/location_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="22dp"
                    android:text="City , Country" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/relativContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/main_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/description_field"
                    android:layout_alignLeft="@+id/description_field"
                    android:layout_alignStart="@+id/description_field"
                    android:layout_marginLeft="21dp"
                    android:layout_marginStart="21dp"
                    android:layout_weight="1"
                    android:text="Weather" />

                <TextView
                    android:id="@+id/description_field"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="35dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginStart="21dp"
                    android:text="Description"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/temp_field"
                    android:layout_width="82dp"
                    android:layout_height="60dp"
                    android:layout_alignBaseline="@+id/description_field"
                    android:layout_alignBottom="@+id/description_field"
                    android:layout_marginLeft="23dp"
                    android:layout_marginStart="23dp"
                    android:layout_toRightOf="@+id/description_field"
                    android:fontFamily="casual"
                    android:gravity="top|right"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/colorPrimary"
                    android:textSize="36sp"
                    android:textStyle="bold|italic"
                    android:typeface="monospace"
                    android:visibility="visible"
                    tools:text="20Â°C" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>